
<ul class="row" style="color:green">


<% if @bookmarks.length == 0 %>
There is currently no bookmarks
<% end %>

<center>  
<%= flash[:bookmark] %>

</center>
</ul>

 
<div class="container">
<%= will_paginate @bookmarks, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %> 
 
      <% @bookmarks.each do |x| %>
        <ul class="list-group-item list-group-item-action">
        
          <span 
            data-url="<%= x.link %>" 
            class="article-title" 
            title="<%= x.title %>" 
            style="font-weight: bold;color: blue ;  display: inline-block;"
          > 

            <%= x['title'] %>     
          </span>
          <p class="card-text">
            <%= x.note %>
          </p>
          <ul class="nav nav-pills nav-justified">
          

          <li class="nav-item">
          <%= social_share_button_tag("MyInvestMentWiki",:url => x.link,desc: x.title) %><br><br>
          <%= button_to  'Remove' , bookmark_path(x),  class: "btn btn-primary btn-sm" , method: :delete, data: {confirm: 'are you sure you want to delete this bookmark :'+x.note+'?'}  %>
          </li>

         <!--

          <li class="nav-item" style="margin-top: auto; color:blue">
          
          <%= button_to  'Remove' , bookmark_path(x),  class: "btn btn-primary " , method: :delete, data: {confirm: 'are you sure you want to delete this bookmark :'+x.note+'?'}  %>
          
          </li>
        -->


          </ul>
           
        </ul>
      <% end %>
    
</div>